{
  "name": "Testimonial",
  "type": "object",
  "properties": {
    "client_name": {
      "type": "string",
      "description": "Client name"
    },
    "rating": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "Star rating"
    },
    "review": {
      "type": "string",
      "description": "Review text"
    },
    "service": {
      "type": "string",
      "description": "Service received"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Review date"
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "description": "Featured testimonial"
    }
  },
  "required": [
    "client_name",
    "rating",
    "review"
  ]
}