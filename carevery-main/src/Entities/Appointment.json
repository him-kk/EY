{
  "name": "Appointment",
  "type": "object",
  "properties": {
    "client_name": {
      "type": "string",
      "description": "Client's full name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Client's email address"
    },
    "phone": {
      "type": "string",
      "description": "Client's phone number"
    },
    "service": {
      "type": "string",
      "description": "Selected service name"
    },
    "preferred_date": {
      "type": "string",
      "format": "date",
      "description": "Preferred appointment date"
    },
    "preferred_time": {
      "type": "string",
      "description": "Preferred appointment time"
    },
    "message": {
      "type": "string",
      "description": "Additional message or special requests"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "confirmed",
        "completed",
        "cancelled"
      ],
      "default": "pending",
      "description": "Appointment status"
    },
    "service_price": {
      "type": "number",
      "description": "Service price"
    },
    "duration": {
      "type": "string",
      "description": "Service duration"
    }
  },
  "required": [
    "client_name",
    "email",
    "phone",
    "service",
    "preferred_date",
    "preferred_time"
  ]
}